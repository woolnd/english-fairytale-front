<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title.tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/back.iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_gray"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/title.tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/title.tv"/>

    <TextView
        android:id="@+id/sub1.tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이매일"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/back.iv"
        app:layout_constraintStart_toStartOf="@id/back.iv"/>

    <ImageView
        android:id="@+id/red_dot1.iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/red_dot"
        app:layout_constraintTop_toTopOf="@id/sub1.tv"
        app:layout_constraintStart_toEndOf="@id/sub1.tv"/>

    <ImageView
        android:id="@+id/input1.iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/reset_pw_box"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/sub1.tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/email.et"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:hint="이메일을 입력해 주세요"
        android:textColorHint="#B5B6BD"
        android:textSize="14sp"
        android:background="@android:color/transparent"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="@id/input1.iv"
        app:layout_constraintBottom_toBottomOf="@id/input1.iv"
        app:layout_constraintStart_toStartOf="@id/input1.iv"/>

    <TextView
        android:id="@+id/error1.tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="올바른 이메일을 입력해 주세요"
        android:textColor="#E13017"
        android:textSize="12sp"
        android:visibility="gone"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/input1.iv"
        app:layout_constraintStart_toStartOf="@id/input1.iv"/>

    <TextView
        android:id="@+id/sub2.tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/input1.iv"
        app:layout_constraintStart_toStartOf="@id/input1.iv"/>

    <ImageView
        android:id="@+id/red_dot2.iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/red_dot"
        app:layout_constraintTop_toTopOf="@id/sub2.tv"
        app:layout_constraintStart_toEndOf="@id/sub2.tv"/>

    <ImageView
        android:id="@+id/input2.iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/reset_pw_box"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/sub2.tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/eye_off.iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/eye_off"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toTopOf="@id/input2.iv"
        app:layout_constraintBottom_toBottomOf="@id/input2.iv"
        app:layout_constraintEnd_toEndOf="@id/input2.iv"/>

    <EditText
        android:id="@+id/pw.et"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:hint="비밀번호를 입력해 주세요"
        android:textColorHint="#B5B6BD"
        android:textSize="14sp"
        android:inputType="textPassword"
        android:background="@android:color/transparent"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="@id/input2.iv"
        app:layout_constraintBottom_toBottomOf="@id/input2.iv"
        app:layout_constraintStart_toStartOf="@id/input2.iv"/>

    <TextView
        android:id="@+id/error2.tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="영문 숫자 조합 2~10자 조합으로 입력해 주세요"
        android:textColor="#E13017"
        android:textSize="12sp"
        android:visibility="gone"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/input2.iv"
        app:layout_constraintStart_toStartOf="@id/input2.iv"/>

    <ImageView
        android:id="@+id/btn.iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/info_btn_gray"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input2.iv"/>

    <TextView
        android:id="@+id/btn.tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:textSize="16sp"
        android:textColor="#5C5D61"
        app:layout_constraintTop_toTopOf="@id/btn.iv"
        app:layout_constraintStart_toStartOf="@id/btn.iv"
        app:layout_constraintEnd_toEndOf="@id/btn.iv"
        app:layout_constraintBottom_toBottomOf="@id/btn.iv"/>

</androidx.constraintlayout.widget.ConstraintLayout>