<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title.tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 변경"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/back.iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_gray"
        app:layout_constraintTop_toTopOf="@id/title.tv"
        app:layout_constraintStart_toStartOf="@id/pw1.iv"/>

    <TextView
        android:id="@+id/pw1.tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기존 비밀번호"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/back.iv"
        app:layout_constraintStart_toStartOf="@id/pw1.iv"/>

    <ImageView
        android:id="@+id/pw1.iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/modify_box"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/pw1.tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/eye_off1.iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/eye_off"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toTopOf="@id/pw1.iv"
        app:layout_constraintEnd_toEndOf="@id/pw1.iv"
        app:layout_constraintBottom_toBottomOf="@id/pw1.iv"/>

    <EditText
        android:id="@+id/pw1.et"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:hint="기존 비밀번호를 입력해 주세요"
        android:textSize="14sp"
        android:inputType="textPassword"
        android:textColorHint="#B5B6BD"
        android:background="@android:color/transparent"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="@id/pw1.iv"
        app:layout_constraintBottom_toBottomOf="@id/pw1.iv"
        app:layout_constraintStart_toStartOf="@id/pw1.iv"/>

    <ImageView
        android:id="@+id/red_dot1.iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/red_dot"
        app:layout_constraintTop_toTopOf="@id/pw1.tv"
        app:layout_constraintStart_toEndOf="@id/pw1.tv"/>

    <TextView
        android:id="@+id/pw2.tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="새 비밀번호"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/pw1.iv"
        app:layout_constraintStart_toStartOf="@id/pw1.iv"/>

    <ImageView
        android:id="@+id/red_dot2.iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/red_dot"
        app:layout_constraintTop_toTopOf="@id/pw2.tv"
        app:layout_constraintStart_toEndOf="@id/pw2.tv"/>

    <ImageView
        android:id="@+id/pw2.iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/modify_box"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/pw2.tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/eye_off2.iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/eye_off"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toTopOf="@id/pw2.iv"
        app:layout_constraintBottom_toBottomOf="@id/pw2.iv"
        app:layout_constraintEnd_toEndOf="@id/pw2.iv"/>

    <EditText
        android:id="@+id/pw2.et"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:hint="새 비밀번호를 입력해 주세요"
        android:textColorHint="#B5B6BD"
        android:textSize="14sp"
        android:inputType="textPassword"
        android:background="@android:color/transparent"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="@id/pw2.iv"
        app:layout_constraintBottom_toBottomOf="@id/pw2.iv"
        app:layout_constraintStart_toStartOf="@id/pw2.iv"/>

    <TextView
        android:id="@+id/error2.tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="영문 숫자 조합 2~10자 조합으로 입력해 주세요"
        android:textColor="#E13017"
        android:textSize="12sp"
        android:visibility="gone"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/pw2.iv"
        app:layout_constraintStart_toStartOf="@id/pw2.iv"/>


    <TextView
        android:id="@+id/pw3.tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="새 비밀번호 확인"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/pw2.iv"
        app:layout_constraintStart_toStartOf="@id/pw2.iv"/>

    <ImageView
        android:id="@+id/red_dot3.iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/red_dot"
        app:layout_constraintTop_toTopOf="@id/pw3.tv"
        app:layout_constraintStart_toEndOf="@id/pw3.tv"/>

    <ImageView
        android:id="@+id/pw3.iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/modify_box"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/pw3.tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/eye_off3.iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/eye_off"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toTopOf="@id/pw3.iv"
        app:layout_constraintBottom_toBottomOf="@id/pw3.iv"
        app:layout_constraintEnd_toEndOf="@id/pw3.iv"/>

    <EditText
        android:id="@+id/pw3.et"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:hint="새 비밀번호를 입력해 주세요"
        android:textColorHint="#B5B6BD"
        android:textSize="14sp"
        android:inputType="textPassword"
        android:background="@android:color/transparent"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="@id/pw3.iv"
        app:layout_constraintBottom_toBottomOf="@id/pw3.iv"
        app:layout_constraintStart_toStartOf="@id/pw3.iv"/>

    <TextView
        android:id="@+id/error3.tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호가 일치하지 않습니다."
        android:textColor="#E13017"
        android:textSize="12sp"
        android:visibility="gone"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/pw3.iv"
        app:layout_constraintStart_toStartOf="@id/pw3.iv"/>

    <ImageView
        android:id="@+id/btn.iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/info_btn_gray"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/btn.tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수정하기"
        android:textColor="#5C5D61"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/btn.iv"
        app:layout_constraintStart_toStartOf="@id/btn.iv"
        app:layout_constraintEnd_toEndOf="@id/btn.iv"
        app:layout_constraintBottom_toBottomOf="@id/btn.iv"/>

    <FrameLayout
        android:id="@+id/popup.fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>