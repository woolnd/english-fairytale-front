<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/beforebutton_loading.iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:src="@drawable/button01"
        android:strokeColor="#6F7075"
        android:viewportWidth="11"
        android:viewportHeight="20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginLeft="16dp" />

    <ImageView
        android:id="@+id/main_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/loding_main_iv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="47dp"
        android:layout_marginRight="47dp" />

    <ImageView
        android:id="@+id/loading_token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/loading_chip_iv"
        app:layout_constraintTop_toTopOf="@id/main_iv"
        app:layout_constraintLeft_toLeftOf="@id/main_iv"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="English"
        app:layout_constraintTop_toTopOf="@id/loading_token"
        app:layout_constraintLeft_toLeftOf="@id/loading_token"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/my_book.tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나만의 동화책"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/loading_token"
        app:layout_constraintLeft_toLeftOf="@id/loading_token"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="세상에 하나밖에 없는 나만의 이야기"
        app:layout_constraintLeft_toLeftOf="@id/loading_token"
        app:layout_constraintTop_toBottomOf="@id/my_book.tv"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/how_to_make_book.tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="두구두구\n어떤 동화책이 만들어질까?"
        app:layout_constraintLeft_toLeftOf="@id/main_iv"
        app:layout_constraintTop_toBottomOf="@id/main_iv"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-5dp"
        android:textSize="24sp"
        android:textColor="#3F3F42"
        android:textStyle="bold"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="멋진 동화책이 만들어지고 있어요\n조금만 기다려주세요 :)"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/how_to_make_book.tv"
        app:layout_constraintLeft_toLeftOf="@id/main_iv"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="60dp"
        android:textSize="14sp"
        android:textColor="#98989E" />

    <ImageView
        android:id="@+id/loading_cencel_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/loding_cancel_button_iv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취소하기"
        android:textSize="16sp"
        android:textColor="#98989E"
        app:layout_constraintTop_toTopOf="@id/loading_cencel_btn"
        app:layout_constraintLeft_toLeftOf="@id/loading_cencel_btn"
        app:layout_constraintRight_toRightOf="@id/loading_cencel_btn"
        android:layout_marginTop="18dp"/>











</androidx.constraintlayout.widget.ConstraintLayout>